version: "3.9"
services:
  nginx:
    image: nginx:latest
    ports:
      - "8800:8800"
      # - "443:443"
    depends_on:
      - webapp
    volumes:
      - ./docker/nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
      - ../webapp:/webapp:rw
    networks:
      default:
        aliases:
          - localhost

  db:
    image: postgres
    command: ["postgres", "-c", "fsync=false", "-c", "full_page_writes=off"]
    volumes:
      - ./tmp/db:/var/lib/postgresql/data
    environment:
      POSTGRES_PASSWORD: 'password'

  webapp:
    build:
      context: ./docker/webapp
      dockerfile: Dockerfile
    # command: bash -c "rm -f tmp/pids/server.pid && bundle exec rails s -p 3008 -b '0.0.0.0'"  
    # command: bash -c "bundle exec puma -e production -C config/puma.rb"
    command: bash -c "bundle exec puma -C config/puma.rb"
    volumes:
      - ../webapp:/webapp
      - bundler_gems:/usr/local/bundle
    ports:
      - "3008:3008"
    depends_on:
      - db

volumes:
  bundler_gems:
